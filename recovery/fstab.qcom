# Android fstab file.
# The filesystem that contains the filesystem checker binary (typically /system) cannot
# specify MF_CHECK, and must come before any filesystems that do specify MF_CHECK

#TODO: Add 'check' as fs_mgr_flags with data partition.
# Currently we dont have e2fsck compiled. So fs check would failed.

#<src>                                                <mnt_point>        <type>  <mnt_flags and options>                                      <fs_mgr_flags>
/dev/block/bootdevice/by-name/system                  /system            ext4    ro,barrier=1                                                 wait
/dev/block/bootdevice/by-name/userdata                /data              ext4    noatime,nosuid,nodev,barrier=1,data=ordered,noauto_da_alloc  wait,check,encryptable=footer,length=-16384
/dev/block/bootdevice/by-name/cache                   /cache             ext4    noatime,nosuid,nodev,barrier=1,data=ordered                  wait,check

/dev/block/bootdevice/by-name/boot                    /boot              emmc    defaults                                                     recoveryonly
/dev/block/bootdevice/by-name//recovery               /recovery          emmc    defaults                                                     recoveryonly

/devices/soc.0/7864900.sdhci/mmc_host                 /storage/sdcard1   auto    defaults                                                     wait,voldmanaged=sdcard1:auto
/devices/platform/msm_hsusb                           /storage/udisk     auto    defaults                                                     wait,voldmanaged=udisk:auto
